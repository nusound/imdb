<h1 class="current_category"><%= params[:category] %></h1>

<% if @movies.count ==0 %>
  <h3>There are no plays in this category</h3>
<% else %>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-4">
        <a href="/movies/<%= movie.id %>">
          <%= image_tag movie.movie_img.url(:movie_index), class: "movie" %>
        </a>
      </div>
    <% end %>
  </div>
<% end %>
